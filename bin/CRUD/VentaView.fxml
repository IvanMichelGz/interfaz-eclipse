<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="CRUD.VentasController"
            stylesheets="@estilo.css"
            prefWidth="1000" prefHeight="600">

    <top>
        <Label text="GestiÃ³n de Ventas" style="-fx-font-size: 20px; -fx-padding: 10;" />
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 10;">
            
            <!-- Tabla cabecera de venta -->
            <Label text="Ventas registradas" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <TableView fx:id="tablaVentas" prefHeight="150">
                <columns>
                    <TableColumn fx:id="colIdVenta" text="ID Venta" prefWidth="80"/>
                    <TableColumn fx:id="colFecha" text="Fecha" prefWidth="120"/>
                    <TableColumn fx:id="colCliente" text="Cliente" prefWidth="120"/>
                    <TableColumn fx:id="colEmpleado" text="Empleado" prefWidth="120"/>
                    <TableColumn fx:id="colTotal" text="Total" prefWidth="100"/>
                </columns>
            </TableView>

            <!-- Botones para cabecera de venta -->
            <HBox spacing="10">
                <Button text="Guardar Venta" onAction="#insertarVenta"/>
                <Button text="Actualizar Venta" onAction="#actualizarVenta"/>
                <Button text="Eliminar Venta" onAction="#eliminarVenta"/>
            </HBox>

            <!-- Tabla detalle de venta -->
            <Label text="Detalle de la venta seleccionada" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <TableView fx:id="tablaDetalle" prefHeight="200">
                <columns>
                    <TableColumn fx:id="colIdDetalle" text="ID Detalle" prefWidth="80"/>
                    <TableColumn fx:id="colIdMaterial" text="ID Material" prefWidth="100"/>
                    <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="100"/>
                    <TableColumn fx:id="colPrecioUnitario" text="Precio Unitario" prefWidth="120"/>
                    <TableColumn fx:id="colSubtotal" text="Subtotal" prefWidth="120"/>
                </columns>
            </TableView>

            <!-- Formulario para agregar detalle -->
            <HBox spacing="10">
                <TextField fx:id="txtIdMaterial" promptText="ID Material"/>
                <TextField fx:id="txtCantidad" promptText="Cantidad"/>
                <TextField fx:id="txtPrecioUnitario" promptText="Precio Unitario"/>
                <Button text="Agregar Detalle" onAction="#insertarDetalle"/>
                <Button text="Eliminar Detalle" onAction="#eliminarDetalle"/>
            </HBox>

        </VBox>
    </center>
</BorderPane>