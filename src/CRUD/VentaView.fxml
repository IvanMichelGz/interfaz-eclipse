<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="CRUD.VentasController"
            prefWidth="900" prefHeight="600">

    <top>
        <Label text="Gestión de Ventas" style="-fx-font-size: 20px; -fx-padding: 10;" />
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            
            <!-- Tabla del carrito -->
            <TableView fx:id="tablaCarrito" onMouseClicked="#seleccionarVenta">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colNombre" text="Producto" prefWidth="150"/>
                    <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="100"/>
                    <TableColumn fx:id="colPrecio" text="Precio Unitario" prefWidth="100"/>
                    <TableColumn fx:id="colSubtotal" text="Subtotal" prefWidth="120"/>
                </columns>
            </TableView>

            <!-- Campos de entrada -->
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="txtProducto" promptText="Producto"/>
                <TextField fx:id="txtCantidad" promptText="Cantidad"/>
                <TextField fx:id="txtPrecio" promptText="Precio"/>
            </HBox>

            <!-- Botones de acción -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Agregar" onAction="#agregarAlCarrito" style="-fx-background-color: lightblue;"/>
                <Button text="Finalizar Venta" onAction="#finalizarVenta"/>
                <Button text="Cancelar" onAction="#cancelarVenta"/>
            </HBox>

            <!-- Total -->
            <HBox spacing="10">
                <Label text="Total:"/>
                <Label fx:id="labelTotal" text="$0.00"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>