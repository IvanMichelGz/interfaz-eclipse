<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="CRUD.ProveedorController"
            stylesheets="@estilo.css"
            prefWidth="900" prefHeight="600">

    <top>
        <Label text="Gestión de Proveedores" style="-fx-font-size: 18; -fx-padding: 10;"/>
    </top>

    <center>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20;">
            <TableView fx:id="tablaProveedores" prefHeight="400" prefWidth="800">
                <columns>
                    <TableColumn fx:id="colId" text="ID"/>
                    <TableColumn fx:id="colNombre" text="Nombre"/>
                    <TableColumn fx:id="colDireccion" text="Dirección"/>
                    <TableColumn fx:id="colTelefono" text="Teléfono"/>
                    <TableColumn fx:id="colEmail" text="Email"/>
                </columns>
            </TableView>

            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="txtNombre" promptText="Nombre"/>
                <TextField fx:id="txtDireccion" promptText="Dirección"/>
                <TextField fx:id="txtTelefono" promptText="Teléfono"/>
                <TextField fx:id="txtEmail" promptText="Email"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Agregar" onAction="#agregarProveedor"/>
                <Button text="Actualizar" onAction="#actualizarProveedor"/>
                <Button text="Eliminar" onAction="#eliminarProveedor"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>